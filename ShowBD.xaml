<Window x:Class="Examen.ShowBD"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Examen"
        mc:Ignorable="d"
		WindowStartupLocation="CenterScreen"
        Title="ShowBD" Height="450" Width="800">
    <Grid>
		<TabControl x:Name="BDShow">
			<TabItem Header="Все заявки">
				<Frame x:Name="AllQuery"/>
			</TabItem>
			<TabItem Header="Комнаты">
				<Frame x:Name="Комнаты"/>
			</TabItem>
			<TabItem Header="Корпусы">
				<Frame x:Name="Корпусы"/>
			</TabItem>
		</TabControl>
    </Grid>
</Window>
