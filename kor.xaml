<Page x:Class="Examen.kor"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Examen"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="kor">

	<Grid>
		<DataGrid x:Name="dg" Grid.Row="1" AutoGenerateColumns="False" IsReadOnly="True">
			<DataGrid.Columns>
				<DataGridTextColumn Header="Номер комнаты" Binding="{Binding id_korpus}" Width="1*"/>
				<DataGridTextColumn Header="Количество мест" Binding="{Binding count_komnats}"  Width="1*"/>
			</DataGrid.Columns>
		</DataGrid>
	</Grid>
</Page>
